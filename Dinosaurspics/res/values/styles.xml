<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

	<style name="CustomTheme" parent="android:Theme.Light">
	    <item name="android:windowBackground">@color/green</item>
	    <item name="android:colorBackground">@color/darkblue</item>
	</style>
    
    

    <style name="tvStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/blue</item>  
        <item name="android:textStyle">italic</item>
    </style>
    
    <style name="etStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/red</item>  
        <item name="android:textStyle">italic</item>
    </style>
        <style name="CodeFont" parent="@android:style/TextAppearance.Large">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/darkred</item>
        <item name="android:typeface">monospace</item>
         <item name="android:textStyle">bold</item>
    </style>
        <style name="CodeFont.Red">
        <item name="android:textColor">#FF0000</item>
    </style>
        <style name="tvDescription">
     	 <item name="android:typeface">monospace</item>
         <item name="android:textStyle">bold</item>
        </style>
        
    <style name="CustumButtonStyle" parent="@android:style/Widget.TextView">
    
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">#ffffff</item>
    <item name="android:gravity">center</item>
    <item name="android:textSize">15sp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:shadowColor">#000000</item>
    <item name="android:shadowDx">1</item>
    <item name="android:shadowDy">1</item>
    <item name="android:shadowRadius">2</item>
</style>
</resources>
